@model MVC.Models.Game.GameDelete

@{
	ViewData["Title"] = $"🎲 {Model.Nom}";
}

<h1>Désactiver le jeu : 🎲 @Html.DisplayFor(model => model.Nom)</h1>

<h3>Êtes-vous sûr de vouloir désactiver 🎲 @Html.DisplayFor(model => model.Nom)</h3>
<div>
    <h4>Jeu à supprimer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AgeMin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AgeMin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AgeMax)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AgeMax)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NbJoueurMin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NbJoueurMin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NbJoueurMax)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NbJoueurMax)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DureeMinute)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DureeMinute)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDisabled)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDisabled)
        </dd>
    </dl>
    
    <form asp-action="Delete">
		<input type="hidden" asp-for="JeuId" />

		<input type="submit" value="Désactiver" class="btn btn-danger" />
		<a asp-controller="User" asp-action="Details" asp-route-id="@Model.JeuId" class="btn btn-primary">
			Retour à la page du jeu
		</a>
		<a asp-action="Index" class="btn btn-primary text-white">
			Retour à la liste des jeux
		</a>
    </form>
</div>
