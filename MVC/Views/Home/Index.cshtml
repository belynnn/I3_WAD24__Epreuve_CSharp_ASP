﻿﻿@using (Html.BeginForm("Index", "Home", FormMethod.Get))
@model IEnumerable<BLL.Entities.Game>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<form method="get" asp-controller="Game" asp-action="Search">
		<input type="text" name="searchQuery" placeholder="Rechercher un jeu" />
		<button type="submit">Chercher</button>
	</form>

	<h2>Top 10 des jeux les plus empruntés</h2> 
	<table class="table"> 
 		<thead> 
 			<tr> 
 				<th>Nom</th> 
 				<th>Description</th> 
 			</tr> 
 		</thead> 
 		<tbody> 
 			@foreach (var game in Model) 
 			{ 
 				<tr> 
 					<td>@game.Nom</td> 
 					<td>@game.Description</td> 
 				</tr> 
 			} 
 		</tbody> 
	</table> 
</div>